<%= form_for(setup_product(@product), :as => :product, :html => {:class => "products"}) do |f| %>
	<%= f.formatted_error_messages %>
<div class="pane">
	<div class="field required">
		<%= f.text_field :category_id, :class => "hide" %>
		<%= f.label :category %><br />
		<%= product_product_category_autocomplete @product %>
	</div>
	<div class="field required">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field required inrow">
		<%= f.label :kind, "Product Measurement Type" %><br />
		<%= f.select :kind, Product.available_kinds, {}, :class => "product_type_changer" %>
	</div>
	<div class="field required inrow">
		<%= f.label :grade, "Has Grade?" %><br />
		<%= f.check_box :grade %>
	</div>
	<div class="field required">
		<%= f.label :finish, "Has Finish?" %><br />
		<%= f.check_box :finish %>
	</div>
	<div class="field">
		<%= f.label :notes %><br />
		<%= f.text_area :notes %>
	</div>
</div>
<div class="pane inplay">
	<%= f.label :product_sizes %>
	<%= render :partial => 'product_sizes/form', :locals => {:f => f} %>
	<div class="actions">
	<a href="#add_size" class="add_size ss_sprite ss_add">Add Size</a>
	</div>
</div>
<div class="actions">
	<%= f.submit %>
</div>
<% end %>
<div id="size_form_template" class="hide">
	<%= render :partial => 'product_sizes/form_template' %>
</div>