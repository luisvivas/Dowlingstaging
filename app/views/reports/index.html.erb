<h1>Reports</h1>
<form class="no_submit">
<div class="togglebox">
	<h3><a href="#work_orders">Work Orders</a></h3>
	<div class="work_order_reports"> 
		<div class="field">
		<%= hidden_field_tag :work_order_id %>
		<%= work_order_autocomplete %>
		<button class="report inline" id="prof_go">Profitability Report</button>
		</div>
		<hr/>
		<%= link_to "Ordering Aggregate", {:controller => :reports, :action => :ordering}, :class => "button" %>

	</div>
	<h3><a href="#quotes">Quotes</a></h3>
	<div class="quote_reports">
		<div class="field">
		<%= hidden_field_tag :quote_id %>
		<%= quote_autocomplete %>
		<button class="report inline" id="printable_go">Printable</button>
		</div>
	</div>
	<h3><a href="#time_sheets">Time Sheets</a></h3>
	<div class="time_sheet_reports">
		<div class="field">
		<p>
		<%= fields_for :time_sheet do |f| %>
			<%= f.label :user_id %>
			<%= f.select :user_id, options_from_collection_for_select(User.all, :id, :name, current_user.id) %> <br/>
			<%= f.label :start_date %>:
			<%= f.text_field :start_date, :class => "datepicker" %> <br/>
			<%= f.label :end_date %>:
			<%= f.text_field :end_date, :class => "datepicker" %> <br/>
		<% end %>
		<button class="report inline" id="time_sheet_go">Time Sheet</button>
		</div>
	</div>
</div>
</form>