<h2>Sign in</h2>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "no_change_track"}) do |f| %>
	<div class="pane">
		<div class="field">
			<%= f.label :email %><br/>
			<%= f.text_field :email %>
		</div>
		<div class="field">
			<%= f.label :password %><br/>
			<%= f.password_field :password %>
		</div>
		<% if devise_mapping.rememberable? -%>
		<div class="field">
	    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
		</div>
	  	<% end -%>
	</div>
	<div class="actions">
	      <%= f.submit "Sign in" %>
	</div>
<% end %>

<%= render :partial => "devise/shared/links" %>